              %li.show_main_1_right_main_item_body_1_2
                =image_tag i.image.url, class: "show_main_1_right_main_item_body_1_2_3"
                %ul.show_main_1_right_main_item_body_1_2_4
                  .show_main_1_right_main_item_body_1_2_4_1
                    =image_tag i.image.url, class: "show_main_1_right_main_item_body_1_2_4_1_image"
                  .show_main_1_right_main_item_body_1_2_4_2
                    =image_tag i.image.url, class: "show_main_1_right_main_item_body_1_2_4_2_image"
                  .show_main_1_right_main_item_body_1_2_4_3
                    =image_tag i.image.url, class: "show_main_1_right_main_item_body_1_2_4_3_image"
