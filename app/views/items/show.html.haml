            %ul.show_main_1_right_main_item_area_1
              %li.show_main_1_right_main_item_area_1_like{id: "like"}
                %i{class: "fa fa-star"}
                お気に入り0
            %ul.show_main_1_right_main_item_area_2
              %li.show_main_1_right_main_item_area_2_btn
                %a.show_main_1_right_main_item_area_2_btn_1{href: "#"}
                  %i{class:"fa fa-flag"}
                  不適切な商品の通報
        .show_main_1_right_main_comment
