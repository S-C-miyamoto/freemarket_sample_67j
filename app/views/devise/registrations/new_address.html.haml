.address_contents
  .address_contents_top
    住所入力
  .address_contents_main
    = form_for @address, url: addresses_path, id: "new_address", class: "new_address", method: :post do |f|
      -# %input{:name => "utf8", :type => "hidden", :value => "✓"}/
      .address_contents_main_person
        郵便番号
        .address_contents_main_person_required
          必須
      .address_contents_main_post_number_form
        = f.text_field :zipcode, placeholder: "例）123-4567", id: "address_zipcode", class: "address_contents_main_post_number_form_btn", autofocus: true
      .address_contents_main_person
        都道府県
        .address_contents_main_person_required
          必須
      .address_contents_main_prefectures_form
        .address_contents_main_prefectures_form_icon
        =f.select :prefecture, ["------"], {}, {class: "select-default_prefectures", id:"selPref"}

      .address_contents_main_person
        市区町村
        .address_contents_main_person_required
          必須
      .address_contents_main_municipality
        .address_contents_main_municipality_last_name
          = f.text_field :city, placeholder: "例）123-4567", id: "address_city", class: "address_contents_main_municipality_last_name_btn", autofocus: true
      .address_contents_main_person
        番地
        .address_contents_main_person_required
          必須
      .address_contents_main_municipality
        .address_contents_main_municipality_last_name
          = f.text_field :detail_address, placeholder: "例）神南1-18-2", id: "address_detail_address", class: "address_contents_main_municipality_last_name_btn", autofocus: true
      .address_contents_main_building
        建物名
        .address_contents_main_building_required
          任意
      .address_contents_main_municipality
        .address_contents_main_municipality_last_name
          = f.text_field :building, placeholder: "例）例）アジアビル９F", id: "address_building", class: "address_contents_main_municipality_last_name_btn", autofocus: true
      .address_contents_main_building
        電話番号
        .address_contents_main_building_required
          任意
      .address_contents_main_municipality
        .address_contents_main_municipality_last_name
          = f.text_field :optional_phone_number, placeholder: "例）09012345678", id: "address_building", class: "address_contents_main_municipality_last_name_btn", autofocus: true
      .address_contents_main_prefectures_btn
        = f.submit "登録を完了する", class: "btn-default btn-red"








