.sign-up_header
  = image_tag "/images/material/logo/J_Team_Logo.png", height: 100, width: 200 , class: 'sign-up_header_image'
  .sign-up_header_logo
    = image_tag "/images/material/logo/logo.png", height: 100, width: 200 

.sign-up_contents
  .sign-up_contents_top
    新規会員登録
  .sign-up_contents_main
    .sign-up_contents_main_mail-btn
      %a.sign-up_mail{"data-method" => "get", :href => "/users/sign_up"}
        %i.far.fa-envelope
          メールアドレスで登録する
    .sign-up_contents_main_facebook-btn
      %a.sign-up_facebook{"data-method" => "post", :href => "/users/auth/facebook", :rel => "nofollow"}
        %i.fab.fa-facebook-square
          Facebookで登録する
    .sign-up_contents_main_google-btn
      %a.sign-up_google{"data-method" => "post", :href => "/users/auth/google_oauth2", :rel => "nofollow"}
        %i.fab.fa-google
          Googleで登録する


