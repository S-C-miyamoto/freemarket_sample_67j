
.login_header
  %img.login_header_image{:height => "100", :src => "/images/material/logo/J_Team_Logo.png", :width => "200"}/
  .login_header_logo
    %img{:height => "100", :src => "/images/material/logo/logo.png", :width => "200"}/

.login_contents
  .login_contents_top
    .login_contents_top_mail-btn
      = link_to users_path, method: :get, class:"new_register_mail" do
        %i.far.fa-envelope
          新規会員登録

  .login_contents_main
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .login_contents_main_facebook_btn
        %a.new_register_facebook{"data-method" => "post", :href => "/users/auth/facebook", :rel => "nofollow"}
          %i.fab.fa-facebook-square
            Facebookでログイン

      .login_contents_main_google_btn
        = link_to user_google_omniauth_authorize_path, class: "new_register_google" do
          %i.fab.fa-google
          Googleでログイン
      .login_contents_main_mailaddress
        = f.email_field :email, placeholder: "メールアドレス", class:"login_contents_main_mailaddress_btn", id: "user_email"
        -# %input#user_email.login_contents_main_mailaddress_btn{:name => "user[email]", :placeholder => "メールアドレス", :type => "email"}/

      .login_contents_main_password
        = f.password_field :password, placeholder: "パスワード", class:"login_contents_main_password_btn", id: "user_password"
        -# %input#user_password.login_contents_main_password_btn{:name => "user[password]", :placeholder => "パスワード", :type => "password"}/
      .login_contents_main_recaptcha
        %script{:async => "", :defer => "defer", :src => "https://www.recaptcha.net/recaptcha/api.js"}
