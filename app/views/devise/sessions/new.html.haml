.mypage_header
  .mypage_header_box
    .mypage_header_box_upper
      .mypage_header_box_upper_icon
        %a.mypage_header_link{:href => "/"}
          %img.mypage_header_box_upper_icon_image{:src => "/images/material/logo/logo.png"}/
      .mypage_header_box_upper_search
        %form.mypage_search-form{"accept-charset" => "UTF-8", :action => "/items/search", :method => "get"}
          %input{:name => "utf8", :type => "hidden", :value => "✓"}/
          %input#keyword.mypage_search-input{:name => "keyword", :placeholder => "何かお探しですか？", :type => "text"}/
          %i.fas.fa-search.mypage_header_box_upper_search_icon
    .mypage_header_box_lower
      %ul.mypage_header_box_lower_select.categories_box
        %li.mypage_header_box_lower_select_lists
          %a.mypage_header_link.categories-list_link{:href => "/categories"}
            %i.fas.fa-list.mypage_header_box_lower_select_lists_icon
            カテゴリィから探す
            %ul.categories-list_parents
        %li.mypage_header_box_lower_select_lists.brand_box
          %a.mypage_header_link.brand_box{:href => "#"}
            %i.fas.fa-tags.mypage_header_box_lower_select_lists_icon
            ブランドから探す
      %ul.mypage_header_box_lower_users
        %li.mypage_header_box_lower_users_lists
          %a.mypage_header_link{:href => "/users"}
            .mypage_header_box_lower_users_lists_title
              新規会員登録
        %li.mypage_header_box_lower_users_lists
          %a.mypage_header_link{:href => "/users/sign_in"}
            .mypage_header_box_lower_users_lists_title
              ログイン
